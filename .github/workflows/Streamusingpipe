name: Sending data to receiver using pipe 

on: [push, pull_request]

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v2
    
    - name: Build sender for pipe
      run: g++ -Wall -Wextra -fprofile-arcs -ftest-coverage -o receivestream Receiver.c

    - name: Set up JDK 1.8
      uses: actions/setup-java@v1
      with:
        java-version: 1.8
    - name: Build receiver for pipe
      run: javac src/main/java/battery/BatteryParameterStreamer.java
      
    - name pipe input/output
    java -classpath commandprogram CommandProgram
      run: ./receivestream |  java -ea -classpath . src.main.java.battery.BatteryParameterStreamer
